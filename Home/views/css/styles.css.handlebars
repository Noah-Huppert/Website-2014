html, body{
	padding: 0;
	margin: 0;
}

/* --- Header --- */
#backgroundCanvas{
	width: 100%;
	height: 100%;
	display: block;
	position: fixed;
	z-index: 1;
}

#header{
	width: 300px;
	height: 100%;
	position: fixed;
	background: #FFFFFF;
	border-right: 1px solid #7f8c8d;
}

#header #siteName{
	width: 100%;
	margin-top: 40px;
	text-align: center;
	font-family: 'Campton';
	font-weight: bold;
	font-size: 34px;
}

#header #siteTagline{
	width: 100%;
	margin-top: 5px;
	text-align: center;
	font-family: 'Typomoderno';
	font-style: italic;
	font-size: 16px;
}

#header #pageInfo{
	width: 100%;
	margin-top: 30px;
	margin-bottom: 40px;
	padding-bottom: 15px;
	text-align: center;
	font-family: 'Densia Sans';
	font-weight: bold;
	font-size: 24px;
	text-decoration: none;
	color: #8e44ad;
	border-bottom: 1px solid #7f8c8d; 
}

#header #pageInfo .branchInfoText{
	color: #2980b9;
}

#header #branchMenu a{
	width: 100%;
	height: 40px;
	line-height: 40px;
	display: block;
	text-align: center;
	font-family: 'Densia Sans';
	font-weight: 600;
	font-size: 20px;
	border-top: 1px solid #bdc3c7;
}

/* --- Footer --- */
#footer{
	padding-left: 300px;
}

/* --- General --- */
a{
	text-decoration: none;
	color: inherit;
}

.content{
	padding-left: 300px;
}

.above{
	z-index: 2;
}